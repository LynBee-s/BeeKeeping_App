<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:fontFamily="@font/alice"
        android:text="DATA REGISTRY"
        android:textAlignment="center"
        android:textColor="@color/LBYellow_700"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="ID:"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/id"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="ID"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="5dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="HIVE ID:"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/hivid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="HIVE ID"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="DATE:"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/date"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/date"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="# FRAMES: "
            android:textColor="@color/black"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/frames"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="FRAMES"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="HIVE STATUS:"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/hivstat"
            android:layout_width="243dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="HIVE STATUS"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="19dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="POPULATION:"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/popu"
            android:layout_width="173dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="HIVE POPULATION"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="305dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="LOCATION:"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/location"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:hint="Location"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="NOTES: "
            android:textColor="@color/black"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/notes"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:hint="NOTES"
            android:inputType="textPersonName"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/insert"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="Create"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"></LinearLayout>

        <Button
            android:id="@+id/leer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="Search"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"></LinearLayout>

        <Button
            android:id="@+id/actualizar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="Update"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/limpiar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="Clear"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"></LinearLayout>

        <Button
            android:id="@+id/exportar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="Export"
            android:textColor="@color/black" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="237dp" />

</LinearLayout>