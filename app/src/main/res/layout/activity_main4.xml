<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:allowClickWhenDisabled="false"
            android:fontFamily="@font/alice"
            android:text="ID:"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/id3"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="ID"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="13dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:allowClickWhenDisabled="false"
            android:fontFamily="@font/alice"
            android:text="TRANS. ID:"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/transid3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Transaction"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:allowClickWhenDisabled="false"
            android:fontFamily="@font/alice"
            android:text="DATE:"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/date3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView50"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="DESCRIPTION:"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/descrip3"
            android:layout_width="204dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/alice"
            android:hint="Description"
            android:inputType="textPersonName"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:allowClickWhenDisabled="false"
            android:autoHandwritingEnabled="false"
            android:fontFamily="@font/alice"
            android:text="AMT:"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/amt3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:allowClickWhenDisabled="false"
            android:text="PRICE (XCD):"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/price3"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView32"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:allowClickWhenDisabled="false"
            android:fontFamily="@font/alice"
            android:text="TOTAL:"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/total3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView51"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="NOTES:"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/coment3"
            android:layout_width="322dp"
            android:layout_height="66dp"
            android:fontFamily="@font/alice"
            android:hint="Comment"
            android:inputType="textPersonName"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/insert3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/insert"
            android:textColor="#000000"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/search3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Search"
            android:textColor="#000000"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/update3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Update"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/delete3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Delete"
            android:textColor="#000000"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/clear3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Clear Fields"
            android:textColor="#000000"/>
    </LinearLayout>

</LinearLayout>